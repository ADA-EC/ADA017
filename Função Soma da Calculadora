=>Codigo para a biblioteca:
 Sum.h   :
   double Sum(double a, double b);
  
=>Codigo para a função:
  Sum.c   :
  #include<stdio.h>
  #include"Sum.h"

  double Sum(double a,double b){
		double Resultado;
		Resultado = a + b;
		return Resultado;
  }

=>Codigo otimizado para a função:
  #include<stdio.h>
  #include "Sum.h"

  double Sum(double a, double b){
		return a+b;
  }
  
=>Codigo da main:
  #include<stdio.h>
  #include"Sum.h"

  int main(){
	  double a,b,c;
	  printf("Digite dois numeros, usando o ponto como separador decimal:\n \n");
  	scanf("%lf %lf" , &a, &b);
  	c=Sum(a , b);
  	printf("\n \n \n    A somo dos números será: %lf \n \n \n" , c);
  	return 0;
  }

  
